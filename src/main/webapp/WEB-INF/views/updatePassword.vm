#set( $layout = "WEB-INF/layouts/auth.vm" )

<form method="POST" action="/savePassword" class="form-signin">
    <div class="logoBlock2 disTab">
        <div class="logo"></div>
    </div>

    <div class="form-group #if($error)has-error#{else}#{end} formAbs disTab">
        <h2 class="form-heading titleFormAbs">Update password</h2>
        <div class="loginBlock disTab">
            <span>$!{message}</span>
        </div>

        <div class="loginBlock disTab">
            <input name="password" type="password" class="form-control" placeholder="Password"/>
        </div>

        <div class="loginBlock disTab">
            <input name="passwordConfirm" type="password" class="form-control" placeholder="Confirm Password"/>
        </div>

        <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}"/>

        <button class="btn btn-lg btn-primary btn-block go1" type="submit">Upadte password</button>

        <div class="loginBlock disTab">
            <p class="text-center"><a href="/login">Login</a></p>
        </div>
    </div>
</form>