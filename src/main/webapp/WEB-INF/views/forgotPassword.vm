#set( $layout = "WEB-INF/layouts/auth.vm" )

<form method="POST" action="/resetPassword" class="form-signin">

    <div class="form-group #if($error)has-error#{else}#{end} formAbs disTab">
        <div class="loginBlock disTab">
            <input name="email" type="email" class="form-control" placeholder="Email"
                   autofocus="true"/>
        </div>

        <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}"/>

        <button class="btn btn-lg btn-primary btn-block go1" type="submit">Reset</button>
    </div>
</form>