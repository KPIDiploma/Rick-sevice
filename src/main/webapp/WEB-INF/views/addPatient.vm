<form method="POST" modelAttribute="patient" class="form-signin">
##    <div class="logoBlock2 disTab">
##        <div class="logo"></div>
##    </div>

    <div class="form-group formAbs disTab">
        <h2 class="form-heading titleFormAbs">Add new patient</h2>

        #springBind("patient")
        <div class="form-group loginBlock disTab">
            #springFormSingleSelect("patient.sex", $genderValues, "class=form-control")
            #springShowErrors("<br/>", "color:red")
        </div>

        <div class="form-group loginBlock disTab">
            #springFormInput("patient.fullname", "placeholder='Full name' class=form-control autofocus=true")
            #springShowErrors("<br/>", "color:red")
        </div>

        <div class="form-group loginBlock disTab">
            #springFormInput("patient.email", "placeholder=Email class=form-control")
            #springShowErrors("<br/>", "color:red")
        </div>

        <div class="form-group loginBlock disTab">
            #springFormInput("patient.mobile", "placeholder='Phone number' class=form-control")
            #springShowErrors("<br/>", "color:red")
        </div>

        <div class="form-group loginBlock disTab">
            #springFormInput("patient.address", "placeholder='Residential address' class=form-control")
            #springShowErrors("<br/>", "color:red")
        </div>

        <div class="form-group loginBlock disTab input-append date">
            #springFormInput("patient.birthday", "placeholder='Birthday (mm/dd/yyyy)' class='form-control datepicker'")
##            <span class="add-on"><i class="icon-th"></i></span>
            #springShowErrors("<br/>", "color:red")
        </div>

        <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}"/>
        <button class="btn btn-lg btn-primary btn-block go1" type="submit">Submit</button>
    </div>
</form>

<script type="text/javascript">
    $(document).ready(function() {
        $(".datepicker").datepicker({
            dateFormat:"yyyy/mm/dd"
        });
    });
</script>